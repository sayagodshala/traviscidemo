<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">

        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">
        <shape
            android:innerRadiusRatio="2.65"
            android:shape="ring"
            android:thicknessRatio="18.0"
            android:useLevel="true">

            <gradient
                android:centerColor="#f2f2f2"
                android:endColor="#f2f2f2"
                android:startColor="#f2f2f2"
                android:type="sweep" />
        </shape>
        </rotate>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">

            <shape
                android:innerRadiusRatio="2.65"
                android:shape="ring"
                android:thicknessRatio="18.0"
                android:useLevel="true">


                <rotate
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="360" />

                <gradient
                    android:centerColor="#285ee4"
                    android:endColor="#285ee4"
                    android:startColor="#285ee4"
                    android:type="sweep" />

            </shape>
        </rotate>
    </item>
</layer-list>