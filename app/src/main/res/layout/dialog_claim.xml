<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/white_rounded_update">

        <View
            android:id="@+id/pattern"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/app_update_back"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="-55dp"
            android:layout_below="@+id/pattern"
            android:layout_centerInParent="true"
            android:src="@drawable/app_update_down_base" />

        <ImageView
            android:id="@+id/imageViewOverlay"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="-60dp"
            android:layout_below="@+id/pattern"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_raffle_pop_up"/>

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hurray!"
            android:textStyle="bold"
            android:layout_marginTop="-5dp"
            android:layout_below="@+id/imageView"
            android:textColor="#515151"
            android:gravity="center"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/dialog_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#7f7f7f"
            android:layout_below="@+id/dialog_title"
            android:text="Get a newer version of MeraBreak App."
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/dialog_action_btn"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:text="@string/okay"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/dialog_desc"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@drawable/redeem_button"/>

    </RelativeLayout>
</RelativeLayout>