<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:elevation="2dp"
        android:background="@drawable/button_prod_raffle_new">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:src="@drawable/dummy_raffle_image" />

        <ImageView
            android:id="@+id/lock"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/lock_store"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:maxLines="1"
                android:text="Challange title"
                android:textColor="#654597"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:maxLines="2"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry "
                android:textColor="#928d9b"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="10dp"
                android:text="1000"
                android:textColor="#2c2f38"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buy"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/button_buy_now"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/history_raffle_buy"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/raffle_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:text="08d:08h:92m"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/details"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:textColor="#666171"
            android:textSize="10sp"/>
    </RelativeLayout>
</RelativeLayout>
