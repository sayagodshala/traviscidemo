<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/white_rounded_new_promo_dialog"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/dialog_back_pattern"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="-55dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/spin_win_icon" />

        <TextView
            android:id="@+id/spin_points_congrats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/spin_win_dialog_congrats"
            android:textStyle="bold"
            android:layout_marginTop="-5dp"
            android:textColor="#515151"
            android:gravity="center"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/spin_points_congrat_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#7f7f7f"
            android:text="You have won 25,000 points."
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textSize="14sp"/>



