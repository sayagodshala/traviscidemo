    <LinearLayout
        android:id="@+id/respins_hlder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp">
        <Button
            android:id="@+id/button_respins"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@+id/profile_update_desc"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/redeem_button"
            android:gravity="center"
            android:text="@string/spin_win_dialog_respins"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/or"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="or"
            android:textColor="#cfcfcf"
            android:textSize="10sp" />

        <Button
            android:id="@+id/spin_points_close"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="@string/spin_win_dialog_close"
            android:textColor="#727272"
            android:textSize="13sp"
            android:background="@color/transparent"
            android:textAllCaps="false"/>
    </LinearLayout>
        <Button
            android:id="@+id/spins_close_btn"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:background="#7e8699"
            android:text="@string/spin_win_dialog_close"
            android:textAllCaps="false"
            android:textColor="#f6f6f6"
            android:textSize="16sp"
            android:visibility="gone"/>

    </LinearLayout>
