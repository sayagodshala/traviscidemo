<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <!--<ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/winners_main"
            android:layout_below="@+id/toolbar">-->

        <RelativeLayout
            android:id="@+id/challenge_complete_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:id="@+id/challenge_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/rounded_corners_linearlayout"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/win_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Congratulations!"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/win_about1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="This is a Burger Challenge"
                    android:textColor="@color/grey8"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/win_msg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="You have successfully completed the challenge and won some amazing prize_list"
                    android:textColor="@color/grey4"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/chall_score_content"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/grey1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/linear_one"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/challenge_right_num1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:text="00"
                                android:textColor="@color/com_facebook_blue"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/challenge_right_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-2dp"
                                android:gravity="center"
                                android:text="Right answers"
                                android:textColor="@color/com_facebook_blue"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_alignRight="@id/linear_one"
                            android:background="@color/grey2" />

                        <LinearLayout
                            android:id="@+id/linear_two"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/won_points_num1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:text="00"
                                android:textColor="@color/com_facebook_blue"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/won_points_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="-5dp"
                                android:gravity="center"
                                android:text="Your IPLPointsConfig"
                                android:textColor="@color/com_facebook_blue"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_alignRight="@+id/linear_two"
                            android:background="@color/grey2" />

                        <LinearLayout
                            android:id="@+id/linear_three"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/won_per_num1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:text="00"
                                android:textColor="@color/com_facebook_blue"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/won_per_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="-2dp"
                                android:gravity="center"
                                android:text="Win percentage"
                                android:textColor="@color/com_facebook_blue"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <!-- </ScrollView>-->
        <Button
            android:id="@+id/chall_like1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/challenge_complete_content1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/like_button" />

        <Button
            android:id="@+id/chall_done1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/challenge_complete_content1"
            android:layout_centerInParent="true"
            android:layout_marginTop="-20dp"
            android:background="@drawable/play_button"
            android:text="@string/done"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/chall_share1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/challenge_complete_content1"
            android:layout_marginRight="40dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/share_button" />


</RelativeLayout>