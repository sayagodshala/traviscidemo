<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="RechargeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/redeem_button</item>
    </style>

    <style name="PrimaryEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">@color/edittext1</item>

    </style>

    <style name="ProjectEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textColorHint">@color/black_text_color</item>
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/control_background</item>
    </style>

    <style name="ProjectTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="ProjectTextViewWhite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_white</item>
    </style>

    <style name="ProjectTextViewMp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="ProjectTotalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>


    <style name="FgliTextViewLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="FgliTextViewMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="NavDivider" parent="Divider">
        <item name="android:background">@drawable/navigation_line</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>


    <style name="ProjectDrawerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/drawer_text_item</item>
    </style>

    <style name="ProjectDrawerItemHeader" parent="ProjectDrawerItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/drawer_text_item</item>
    </style>

    <style name="ProjectTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primary_color</item>
    </style>

    <style name="AuthTabLayout" parent="ProjectTabLayout"></style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="tabIndicatorColor">@color/black_transparent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@drawable/tab_color_selector</item>
        <item name="tabTextAppearance">@style/AppTheme.TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="AppTheme.TextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>


