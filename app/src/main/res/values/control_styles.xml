    <style name="SeekbarBronze" parent="Widget.AppCompat.SeekBar" >
        <item name="colorAccent">@color/grey10</item>
    </style>

    <style name="SeekbarChallanges" parent="Widget.AppCompat.SeekBar" >
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <style name="SeekbarCoinWons" parent="Widget.AppCompat.SeekBar" >
        <item name="colorAccent">@color/app_red</item>
    </style>

    <style name="SeekbarReferrals" parent="Widget.AppCompat.SeekBar" >
        <item name="colorAccent">@color/app_blue</item>
    </style>

    <style name="SeekbarRaffles" parent="Widget.AppCompat.SeekBar" >
        <item name="colorAccent">@color/app_green</item>
    </style>

    <style name="SeekbarCongrats" parent="Widget.AppCompat.SeekBar" >
        <item name="colorAccent">@color/app_white</item>
    </style>

    <style name="ExpandedBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

