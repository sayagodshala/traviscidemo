<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="actionOverflowMenuStyle">@style/OptionsMenus</item>
        <item name="android:actionOverflowButtonStyle">@style/OptionsMenus</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#654597</item>
        <item name="colorSwitchThumbNormal">#b2a2cb</item>
    </style>

    <style name="FragmentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="OptionsMenus" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:src">@drawable/overflow_icon</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>

    <style name="InvisibleProgress">
        <item name="android:visibility">gone</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/selected_tab_color</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ColorSwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/ipl_theme_color</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#cccccc</item>
    </style>

    <style name="AndroidImageSlider_Corner_Oval_Orange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/indicator_corner_bg</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="shape">oval</item>
        <item name="padding_left">3dp</item>
        <item name="padding_right">3dp</item>
        <item name="padding_top">4dp</item>
        <item name="padding_bottom">4dp</item>

        <item name="selected_color">@color/selected_tab_color</item>
        <item name="unselected_color">#ffffff</item>
        <item name="selected_width">7dp</item>
        <item name="selected_height">7dp</item>
        <item name="unselected_width">4dp</item>
        <item name="unselected_height">4dp</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/white_transparent
        </item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme.AppCompat.Translucent.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/white_transparent
        </item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
